<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/background">



            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="借款"
                android:textColor="@color/color_white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView33"
                android:layout_margin="30dp"
                android:alpha="0.5"
                android:background="@drawable/bg_borrow">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:text="小额贷款——轻松借"
                    android:textColor="@color/them_color"
                    android:textSize="25dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="20dp"
                    android:id="@+id/relativeLayout5"
                    android:layout_marginTop="13dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="16dp"
                        android:text="选择金额"
                        android:textColor="@color/color_black" />

                    <RelativeLayout
                        android:id="@+id/relativeLayout2"
                        android:layout_width="140dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView6"
                        android:background="@drawable/btn_renz_head">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textSize="16dp"
                            android:textColor="@color/color_black"
                            android:id="@+id/textView8" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignEnd="@+id/relativeLayout2"
                        android:layout_alignRight="@+id/relativeLayout2"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@mipmap/xiala" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout5"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="20dp"
                    android:id="@+id/relativeLayout7"
                    android:layout_marginTop="13dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textSize="16dp"
                        android:text="选择借款期限"
                        android:textColor="@color/color_black" />

                    <RelativeLayout
                        android:id="@+id/relativeLayout3"
                        android:layout_width="140dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/textView7"
                        android:background="@drawable/btn_renz_head">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="7(天)"
                            android:textSize="16dp"
                            android:textColor="@color/color_black"
                            android:id="@+id/tv_day" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignBottom="@+id/tv_day"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginEnd="13dp"
                            android:layout_marginRight="13dp"
                            android:src="@mipmap/xiala" />
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/relativeLayout7"
                    android:id="@+id/view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="借款须知"
                    android:textSize="18sp"
                    android:id="@+id/textView5" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:text="借款人:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_toEndOf="@+id/textView11"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/textView11"
                    android:id="@+id/tv_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView11"
                    android:layout_alignStart="@+id/textView11"
                    android:layout_below="@+id/tv_name"
                    android:text="借款金额："
                    android:layout_marginTop="12dp"
                    android:id="@+id/textView99" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/textView99"
                    android:layout_toRightOf="@+id/textView99"
                    android:text=""
                    android:id="@+id/tv_money" />

                <TextView
                    android:id="@+id/textView88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView99"
                    android:layout_alignStart="@+id/textView99"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/textView99"
                    android:text="借款时间：" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_alignLeft="@+id/tv_money"
                    android:layout_alignStart="@+id/tv_money"
                    android:layout_below="@+id/tv_money"
                    android:text=""
                    android:id="@+id/tv_qixian" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_alignLeft="@+id/textView88"
                    android:layout_alignStart="@+id/textView88"
                    android:layout_below="@+id/textView88"
                    android:text="综合费用："
                    android:id="@+id/textView13" />

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_alignLeft="@+id/tv_qixian"
                    android:layout_alignStart="@+id/tv_qixian"
                    android:layout_below="@+id/tv_qixian"/>

                <ImageView
                    android:id="@+id/iv_wenhao"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignTop="@+id/tv_cost"
                    android:layout_toRightOf="@+id/tv_cost"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/icon_wen" />

                <TextView
                    android:id="@+id/tv_huankuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_alignLeft="@+id/textView13"
                    android:layout_alignStart="@+id/textView13"
                    android:layout_below="@+id/textView13"
                    android:text="还款方式：" />

                <TextView
                    android:id="@+id/tv_yicixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_cost"
                    android:layout_marginTop="12dp"
                    android:layout_alignStart="@+id/tv_cost"
                    android:layout_below="@+id/tv_cost"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_alignLeft="@+id/tv_huankuan"
                    android:layout_alignStart="@+id/tv_huankuan"
                    android:layout_below="@+id/tv_huankuan"
                    android:text="逾期政策："
                    android:id="@+id/textView14" />

                <TextView
                    android:id="@+id/tv_yvqi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView14"
                    android:layout_alignBottom="@+id/textView14"
                    android:layout_alignLeft="@+id/tv_yicixing"
                    android:layout_alignStart="@+id/tv_yicixing"
                    android:text="逾期元/天" />

                <Button
                    android:id="@+id/btn_apply"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="22dp"
                    android:background="@drawable/btn_shenqing"
                    android:textColor="@color/color_white"
                    android:text="我要申请" />

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>


</android.support.constraint.ConstraintLayout>


